<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.news.layout.main.MainFragment"

        android:label="@string/last_news"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_show_detail"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.news.layout.DetailFragment"
        android:label="{newsTitle}">

        <argument
            android:name="selectedNews"
            app:argType="com.example.news.models.News" />

        <argument
            android:name="newsTitle"
            app:argType="string" />
    </fragment>
</navigation>